# =============================================================================
# Polymath Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# Project root (optional - auto-detected if not set)
# POLYMATH_ROOT=/path/to/polymath

# =============================================================================
# Database Connections
# =============================================================================

POSTGRES_DSN=dbname=polymath user=polymath host=/var/run/postgresql
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# =============================================================================
# Paths (optional - auto-detected relative to project root)
# =============================================================================

# CHROMADB_PATH=/path/to/chromadb
# STAGING_DIR=/path/to/ingest_staging

# =============================================================================
# Embedding Models
# =============================================================================

# Default: BGE-M3 for SOTA 1024-dim embeddings
EMBEDDING_MODEL=BAAI/bge-m3

# Reranker for hybrid search
RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Collection names (BGE-M3 1024-dim embeddings)
PAPERS_COLLECTION=polymath_bge_m3
CODE_COLLECTION=polymath_code_bge_m3

# =============================================================================
# LLM Configuration
# =============================================================================

# Primary: Claude subagents in Claude Code sessions
# Fallback: Direct API calls when ENABLE_LLM_API=true
ANTHROPIC_API_KEY=your_anthropic_key
LLM_MODEL=claude-sonnet-4-20250514
ENABLE_LLM_API=false

# =============================================================================
# External API Keys
# =============================================================================

BRAVE_API_KEY=your_brave_api_key
GITHUB_TOKEN=your_github_token
OPENALEX_EMAIL=your_email@example.com
OPENALEX_API_KEY=your_api_key_here
